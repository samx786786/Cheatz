<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#000"
    android:layout_height="match_parent"
    tools:context=".Shopui">

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/backgroud2">
    </ImageView>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="match_parent"
        android:background="@drawable/buttonbg"
        app:layout_constraintEnd_toEndOf="parent" >

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/textView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/info" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textSize="@dimen/_12sdp"
            android:ellipsize="end"
            android:textColor="#FFF"
            android:layout_marginBottom="@dimen/_28sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />



        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="@dimen/_34sdp"
            android:layout_height="@dimen/_34sdp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/_28sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/home" />


        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="41dp"
            android:layout_height="50dp"
            android:layout_marginBottom="@dimen/_16sdp"
            app:layout_constraintBottom_toTopOf="@+id/imageView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/ic_icon_feather_shopping_cart" />


        <TextView
            android:id="@+id/textView27"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:ellipsize="end"
            android:maxLength="4"
            android:maxLines="1"
            android:visibility="invisible"
            android:text="@string/cart"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#FFF"
            android:textSize="@dimen/_16sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2">
        </TextView>

        <HorizontalScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_8sdp"
            app:layout_constraintBottom_toTopOf="@+id/imageView3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView27">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="@dimen/_35sdp"
                    android:id="@+id/constraincart1"
                    android:visibility="gone"
                    android:background="@drawable/cartitembg"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_height="@dimen/_35sdp"
                    xmlns:app="http://schemas.android.com/apk/res-auto">

                    <ImageView
                        android:layout_width="match_parent"
                        android:id="@+id/cartimage1"
                        android:scaleType="centerInside"
                        android:layout_height="match_parent">
                    </ImageView>

                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="@dimen/_35sdp"
                    android:background="@drawable/cartitembg"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:id="@+id/constraincart2"
                    android:visibility="gone"
                    android:layout_height="@dimen/_35sdp"
                    xmlns:app="http://schemas.android.com/apk/res-auto">

                    <ImageView
                        android:layout_width="match_parent"
                        android:id="@+id/cartimage2"
                        android:scaleType="centerInside"
                        android:layout_height="match_parent">
                    </ImageView>

                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="@dimen/_35sdp"
                    android:background="@drawable/cartitembg"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:id="@+id/constraincart3"
                    android:visibility="gone"
                    android:layout_height="@dimen/_35sdp"
                    xmlns:app="http://schemas.android.com/apk/res-auto">

                    <ImageView
                        android:layout_width="match_parent"
                        android:id="@+id/cartimage3"
                        android:scaleType="centerInside"
                        android:layout_height="match_parent">
                    </ImageView>

                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="@dimen/_35sdp"
                    android:background="@drawable/cartitembg"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:id="@+id/constraincart4"
                    android:visibility="gone"
                    android:layout_height="@dimen/_35sdp"
                    xmlns:app="http://schemas.android.com/apk/res-auto">

                    <ImageView
                        android:layout_width="match_parent"
                        android:id="@+id/cartimage4"
                        android:scaleType="centerInside"
                        android:layout_height="match_parent">
                    </ImageView>

                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="@dimen/_35sdp"
                    android:background="@drawable/cartitembg"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:id="@+id/constraincart5"
                    android:visibility="gone"
                    android:layout_height="@dimen/_35sdp"
                    xmlns:app="http://schemas.android.com/apk/res-auto">

                    <ImageView
                        android:layout_width="match_parent"
                        android:id="@+id/cartimage5"
                        android:scaleType="centerInside"
                        android:layout_height="match_parent">
                    </ImageView>

                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="@dimen/_35sdp"
                    android:background="@drawable/cartitembg"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:id="@+id/constraincart6"
                    android:visibility="gone"
                    android:layout_height="@dimen/_35sdp"
                    xmlns:app="http://schemas.android.com/apk/res-auto">

                    <ImageView
                        android:layout_width="match_parent"
                        android:id="@+id/cartimage6"
                        android:scaleType="centerInside"
                        android:layout_height="match_parent">
                    </ImageView>

                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="@dimen/_35sdp"
                    android:background="@drawable/cartitembg"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:id="@+id/constraincart7"
                    android:visibility="gone"
                    android:layout_height="@dimen/_35sdp"
                    xmlns:app="http://schemas.android.com/apk/res-auto">

                    <ImageView
                        android:layout_width="match_parent"
                        android:id="@+id/cartimage7"
                        android:scaleType="centerInside"
                        android:layout_height="match_parent">
                    </ImageView>

                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="@dimen/_35sdp"
                    android:background="@drawable/cartitembg"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:id="@+id/constraincart8"
                    android:visibility="gone"
                    android:layout_height="@dimen/_35sdp"
                    xmlns:app="http://schemas.android.com/apk/res-auto">

                    <ImageView
                        android:layout_width="match_parent"
                        android:id="@+id/cartimage8"
                        android:scaleType="centerInside"
                        android:layout_height="match_parent">
                    </ImageView>

                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="@dimen/_35sdp"
                    android:background="@drawable/cartitembg"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:id="@+id/constraincart9"
                    android:visibility="gone"
                    android:layout_height="@dimen/_35sdp"
                    xmlns:app="http://schemas.android.com/apk/res-auto">

                    <ImageView
                        android:layout_width="match_parent"
                        android:id="@+id/cartimage9"
                        android:scaleType="centerInside"
                        android:layout_height="match_parent">
                    </ImageView>

                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="@dimen/_35sdp"
                    android:background="@drawable/cartitembg"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:id="@+id/constraincart10"
                    android:visibility="gone"
                    android:layout_height="@dimen/_35sdp"
                    xmlns:app="http://schemas.android.com/apk/res-auto">

                    <ImageView
                        android:layout_width="match_parent"
                        android:id="@+id/cartimage10"
                        android:scaleType="centerInside"
                        android:layout_height="match_parent">
                    </ImageView>

                </androidx.constraintlayout.widget.ConstraintLayout>



            </LinearLayout>
        </HorizontalScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>




    <SearchView
        android:id="@+id/search_field"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_8sdp"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:background="@drawable/seachlayout"
        android:closeIcon="@drawable/ic_baseline_close_24"
        android:forceDarkAllowed="false"
        android:searchHintIcon="@drawable/ic_baseline_search_24"
        android:searchIcon="@drawable/ic_baseline_search_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/constraintLayout"
        app:layout_constraintStart_toStartOf="parent" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/shoprecycler"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/_8sdp"
        app:layout_constraintBottom_toTopOf="@+id/search_field"
        app:layout_constraintEnd_toStartOf="@+id/constraintLayout"
        app:layout_constraintStart_toStartOf="@+id/imageView12"
        app:layout_constraintTop_toTopOf="parent"></androidx.recyclerview.widget.RecyclerView>


</androidx.constraintlayout.widget.ConstraintLayout>